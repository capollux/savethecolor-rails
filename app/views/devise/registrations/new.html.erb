<header>
  <div class="text-vertical-center">
    <div class="main-box">
      <div class="container">
        <div class="row">
          <h1 class="main-letter">SIGN UP</h1>
          <br>
          <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="field col-sm-4 col-sm-offset-4 col-sm-offset-right-4">
              <%= f.email_field :email, autofocus: true, placeholder:"Email", hide_label: true %>
            </div>

            <div class="field col-sm-4 col-sm-offset-4 col-sm-offset-right-4">
              <%= f.password_field :password, autocomplete: "off", placeholder:"Password(>=8characters)", hide_label: true %>
            </div>

            <div class="field col-sm-4 col-sm-offset-4 col-sm-offset-right-4">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Confirm Password", hide_label: true %>
            </div>

            <div class="actions col-xs-4 col-xs-offset-4 col-sm-offset-right-4">
              <%= f.submit "Sign up",class: "btn btn-primary full-width" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
</header>
