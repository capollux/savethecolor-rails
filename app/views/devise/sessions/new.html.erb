<header>
  <div class="text-vertical-center">
    <div class="main-box">
      <div class="container">
        <div class="row">
      	  <h1 class="main-letter">SAVE THE COLOR</h1>
          <br>
            <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field col-sm-4 col-sm-offset-4 col-sm-offset-right-4">
                <%= f.email_field :email, autofocus: true, placeholder:"Email", hide_label: true %>
              </div>

              <div class="field col-sm-4 col-sm-offset-4 col-sm-offset-right-4">
                <%= f.password_field :password, label: true, autocomplete: "off", placeholder:"Password", hide_label: true %>
              </div>

              <div class="actions col-xs-4 col-xs-offset-4 col-sm-offset-right-4">
                <%= f.submit "Sign in", class: "btn btn-primary full-width"%>
              </div>
            <% end %>
        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</header>
